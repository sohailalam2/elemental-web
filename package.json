{
  "private": false,
  "name": "@sohailalam2/elemental-web",
  "version": "0.0.3",
  "description": "Modern web technologies in a nutshell",
  "author": {
    "name": "Sohail Alam",
    "url": "https://sohailalam.in"
  },
  "homepage": "https://sohailalam2.github.io/elemental-web/",
  "repository": {
    "type": "git",
    "url": "git://github.com/sohailalam2/elemental-web.git"
  },
  "bugs": {
    "url": "https://github.com/sohailalam2/elemental-web/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "postbuild": "vue-tsc --emitDeclarationOnly",
    "dev": "vite",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:serve": "vitepress serve docs",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache --ext .ts,js,vue --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "prerelease": "npm run lint && npm run test:cov && npm run build",
    "release": "standard-version",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview"
  },
  "dependencies": {
    "@sohailalam2/abu": "^0.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitest/coverage-istanbul": "^0.24.4",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.5.0",
    "happy-dom": "^7.6.6",
    "husky": "^8.0.1",
    "jsdom": "^20.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "taze": "^0.8.3",
    "terser": "^5.15.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vitepress": "^1.0.0-alpha.26",
    "vitest": "^0.24.4",
    "vue-tsc": "^1.0.9"
  },
  "keywords": [
    "webcomponent",
    "custom component",
    "custom element"
  ],
  "engines": {
    "node": ">=16.15.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./elemental-component": {
      "import": "./dist/elemental-component/index.mjs",
      "require": "./dist/elemental-component/index.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit \"$1\"",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --ignore-path .gitignore --fix",
    "*": "prettier -w -u"
  }
}
